
{{> navbar }}
<div class="container">
    <div class="row mt-5">
        <div class="col-xs-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3 text-center">
            <form role="form" action="/login" method="post">
                <h2>Sign In</h2>
                <hr class="colorgraph">
                {{#if loginError.message}}
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning! {{loginError.message}}</strong>
                    </div>
                {{/if}}
                <div class="form-group">
                    <input type="username" name="username" id="username" class="form-control input-lg"
                           placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" class="form-control input-lg"
                           placeholder="Password">
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 m-auto">
                        <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign In">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{> footer}}