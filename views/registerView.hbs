
{{> navbar }}
<div class="container">
    <div class="row mt-5" id="textCenter" >
        <div class="col-xs-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3 text-center">
            <form role="form" action="/register" method="post">
                <h2>Register</h2>
                <hr class="colorgraph">
                {{#if registerError.message}}
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning! {{registerError.message}}</strong>
                    </div>
                {{/if}}
                <div class="form-group">
                    <input type="username" name="username" id="username" class="form-control input-lg"
                           placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" class="form-control input-lg"
                           placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="name" name="name" id="name" class="form-control input-lg"
                           placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="mail" name="mail" id="mail" class="form-control input-lg"
                           placeholder="E-mail">
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 m-auto">
                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Register">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{> footer}}